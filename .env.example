# Flask Configuration
SECRET_KEY=change-this-to-a-random-secret-key
FLASK_ENV=development
FLASK_DEBUG=True
HOST=0.0.0.0
PORT=5000

# Database Configuration
# For SQLite (development)
DATABASE_URL=sqlite:///tracking.db
# For PostgreSQL (production)
# DATABASE_URL=postgresql://username:password@localhost:5432/tracking_db

# OpenCellID API (for BTS triangulation)
# Get your API key from: https://opencellid.org/
OPENCELLID_API_KEY=your-opencellid-api-key-here

# Security Configuration
JWT_SECRET=change-this-to-a-random-jwt-secret
# Generate encryption key with: python -c "import os; print(os.urandom(32).hex())"
ENCRYPTION_KEY=change-this-to-a-32-byte-hex-encryption-key

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=5

# Token Expiration (in hours)
TOKEN_EXPIRATION_HOURS=24

# Location Update Interval (in seconds)
LOCATION_UPDATE_INTERVAL=30

# Battery Threshold (percentage)
BATTERY_THRESHOLD=15

# Logging
LOG_LEVEL=INFO
LOG_FILE=tracking.log

# Email/SMTP Configuration (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@tracking.com

# Firebase Cloud Messaging (for push notifications)
FCM_API_KEY=your-firebase-cloud-messaging-api-key

# Data Retention (in days)
DATA_RETENTION_DAYS=30

# Geofencing
MAX_GEOFENCES_PER_DEVICE=10
MIN_GEOFENCE_RADIUS=100
MAX_GEOFENCE_RADIUS=10000

# Remote Access
MAX_ACTIVE_TOKENS_PER_DEVICE=3
